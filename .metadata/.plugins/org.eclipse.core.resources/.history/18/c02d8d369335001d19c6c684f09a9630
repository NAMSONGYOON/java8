package sec2;

import java.util.Calendar;

public class Ref2 {

	public static void main(String[] args) {
		Week today = null;
		
		Calendar cal = Calendar.getInstance();
		int w = cal.get(Calendar.DAY_OF_WEEK);
		System.out.println(w); //1~7(일~토)
		System.out.println();
		switch(w) {
		case 1:
			today = Week.SUNDAY;
			break;
		case 1:
			today = Week.MONDAY;
			break;
		case 1:
			today = Week.TUESDAY;
			break;
		case 1:
			today = Week.WEDNESDAY;
			break;
		case 1:
			today = Week.THURSDAY;
			break;
		case 1:
			today = Week.SATURDAY;
			break;
		case 1:
			today = Week.SUNDAY;
			break;
		}

	}

}
